. /lib/functions.sh

linksys_switch_bank() {
	local cur_boot_part mtd_ubi0

	cur_boot_part="$(/usr/sbin/fw_printenv -n boot_part)"
	if [ -z "${cur_boot_part}" ]; then
		mtd_ubi0=$(cat /sys/devices/virtual/ubi/ubi0/mtd_num)
		case "$(grep -E "^mtd${mtd_ubi0}:" /proc/mtd | cut -d '"' -f 2)" in
		kernel|rootfs)
			cur_boot_part=1
			;;
		alt_kernel|alt_rootfs)
			cur_boot_part=2
			;;
		esac
		>&2 printf "Current boot_part='%s' selected from ubi0/mtd_num='%s'" \
			"${cur_boot_part}" "${mtd_ubi0}"
	fi

	# OEM U-Boot for EA6350v3 and EA8300; bootcmd=
	#  if test $auto_recovery = no;
	#      then bootipq;
	#  elif test $boot_part = 1;
	#      then run bootpart1;
	#      else run bootpart2;
	#  fi

	case "$cur_boot_part" in
	1)
		fw_setenv -s - <<-EOF
			boot_part 2
			auto_recovery yes
		EOF
		return
		;;
	2)
		fw_setenv -s - <<-EOF
			boot_part 1
			auto_recovery yes
		EOF
		return
		;;
	*)
		return
		;;
	esac
}

ecw5410_switch_bank() {
	local cur_boot_part mtd_ubi0

	cur_boot_part="$(/usr/sbin/fw_printenv -n active)"

	if [ -z "${cur_boot_part}" ]; then

		part="$(awk -F 'ubi.mtd=' '{printf $2}' /proc/cmdline | sed -e 's/ .*$//')"
		case "$part" in
		rootfs1)
			cur_boot_part=1
			;;
		rootfs2)
			cur_boot_part=2
			;;
		esac
	fi

	case "$cur_boot_part" in
	1)
		fw_setenv active 2
		return
		;;
	2)
		fw_setenv active 1
		return
		;;
	*)
		return
		;;
	esac
}

case "$(board_name)" in
linksys,ea8300)
	linksys_switch_bank
	reboot
	;;
edgecore,ecw5410 |\
edgecore,eap101 |\
edgecore,eap102)
	ecw5410_switch_bank
	reboot
	;;
*)
	return
	;;
esac
